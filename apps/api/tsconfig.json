{
  "extends": "@workspace/typescript-config/base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",

    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "baseUrl": ".",
    "paths": {
      "@workspace/db": ["../../packages/db/dist/index.d.ts"],
      "@workspace/db/*": ["../../packages/db/dist/*.d.ts"],
      "@workspace/types": ["../../packages/types/dist/index.d.ts"],
      "@workspace/types/*": ["../../packages/types/dist/*.d.ts"]
    },

    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
